<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Dashboard - Christian LIMITED GYM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .subscription-card {
            background: linear-gradient(45deg, #1a75ff, #0052cc);
            color: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .qr-container {
            background: white;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .content-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Christian LIMITED GYM</a>
            <div class="ms-auto">
                <span class="text-light me-3">Welcome, <%= user.username %></span>
                <form action="/logout" method="POST" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-outline-light">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Subscription Status -->
        <div class="row">
            <div class="col-md-8">
                <% if (!subscription) { %>
                    <div class="content-card">
                        <h3>Choose a Subscription Plan</h3>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Monthly Plan</h5>
                                        <p class="card-text">Access to all gym facilities for one month</p>
                                        <form action="/member/subscribe" method="POST">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <input type="hidden" name="plan_type" value="monthly">
                                            <button type="submit" class="btn btn-primary">Subscribe - $49.99/month</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Annual Plan</h5>
                                        <p class="card-text">Access to all gym facilities for one year</p>
                                        <form action="/member/subscribe" method="POST">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <input type="hidden" name="plan_type" value="annual">
                                            <button type="submit" class="btn btn-primary">Subscribe - $499.99/year</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="subscription-card">
                        <h3>Active Subscription</h3>
                        <p>Plan: <%= subscription.plan_type %></p>
                        <p>Valid until: <%= new Date(subscription.end_date).toLocaleDateString() %></p>
                    </div>
                    <div class="qr-container">
                        <h4>Gym Access QR Code</h4>
                        <p>Scan this code when entering the gym</p>
                        <img src="<%= qrCode %>" alt="Access QR Code" class="img-fluid">
                    </div>
                <% } %>
            </div>

            <div class="col-md-4">
                <!-- Book Appointment -->
                <div class="content-card">
                    <h3>Book Training Session</h3>
                    <form action="/member/book-appointment" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="mb-3">
                            <label class="form-label">Select Trainer</label>
                            <select name="trainer_id" class="form-select" required>
                                <% trainers.forEach(function(trainer) { %>
                                    <option value="<%= trainer.id %>">
                                        <%= trainer.name %> - <%= trainer.specialization %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Select Date & Time</label>
                            <input type="datetime-local" name="appointment_date" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Book Session</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Appointments -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="content-card">
                    <h3>Your Appointments</h3>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Trainer</th>
                                    <th>Date & Time</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% appointments.forEach(function(appointment) { %>
                                    <tr>
                                        <td><%= appointment.trainer_name %></td>
                                        <td><%= new Date(appointment.appointment_date).toLocaleString() %></td>
                                        <td><%= appointment.status %></td>
                                        <td>
                                            <% if (appointment.status === 'scheduled') { %>
                                                <form action="/member/cancel-appointment/<%= appointment.id %>" method="POST" class="d-inline">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
